{
  "manifest_version": 3,
  "name": "Account Manager",
  "version": "1.0.0",
  "description": "Manage accounts and cookies securely",
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
