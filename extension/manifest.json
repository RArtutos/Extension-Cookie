{
  "manifest_version": 3,
  "name": "Account Manager",
  "version": "1.0.0",
  "description": "Manage accounts and cookies securely",
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icono.png"
  },
  "icons": {
    "16": "icono.png",
    "48": "icono.png",
    "128": "icono.png"
  }
}